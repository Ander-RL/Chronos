<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Chronos" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darker_white</item>
        <item name="colorSecondaryVariant">@color/gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="AppTheme.ToolbarFront" parent="Theme.Chronos">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SwitchButton" parent="Theme.Chronos">
        <!-- color activado -->
        <item name="colorControlActivated">@color/blue_500</item>
        <!-- color desactivado -->
        <item name="colorSurface">@color/gray</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Chronos.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Chronos.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Chronos.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Color Principal -->
        <item name="colorAccent">@color/black</item>
        <!-- Colorea guines bajos e icono teclado -->
        <item name="colorControlNormal">@color/blue_900</item>
        <!-- Colorea la aguja selectora -->
        <item name="colorControlActivated">@color/blue_500</item>
        <!-- Colorea los numeros -->
        <!--<item name="android:colorForeground">@color/blue_900</item>-->
    </style>

    <style name="RadioButtonTheme" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorAccent">@color/gray</item>
        <item name="buttonTint">@drawable/selector_radiobutton</item>
    </style>

</resources>